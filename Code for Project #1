# import random module 
import random
wins=0
plays=1
#start
while True:
    print("Guess the Number from 1 to 5!")
    
    #Get guess from player
    choice = int(input("Pick Number: ")) 
    while choice > 5 or choice < 1: 
        choice = int(input("enter valid input: ")) 
    print("user choice is: " + str(choice))
    
    #start random number
    print("Generating random number...")
    comp_num = random.randint(1, 3) 
    print("Number is: " + str(comp_num))
    
    #check if won
    if choice == comp_num:
        print("You Win! " + str(choice) + str(' = ') + str(comp_num))
        wins= +1
    else:
        print("You Lose. " + str(choice) + str(' does not = ') + str(comp_num))
    print("Play again? (Y/N)")
    ans = input()
    # if user input n or N then condition is True 
    if ans == 'y' or ans == 'Y':
     plays=+1
    elif ans == 'n' or ans =='N':
        break
        
      
print("\nSee you next time! You won " + str(wins) + str(" times."))
